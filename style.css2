body {
  font-family: 'Roboto', sans-serif;
  color: #fff;
  background-color: #0c1b33;
}

.jumbotron {
  background-color: #0c1b33;
  text-align: center;
  padding-top: 80px;
  padding-bottom: 80px;
}

.logo {
  max-width: 200px;
  margin-bottom: 30px;
}

.btn-primary {
  background-color: #1e88e5;
  border-color: #1e88e5;
}

.btn-primary:hover {
  background-color: #1565c0;
  border-color: #1565c0;
}

.owl-logo {
  max-width: 150px;
  margin-bottom: 20px;
}

.feature-icon {
  font-size: 48px;
  color: #1e88e5;
  margin-bottom: 20px;
}

.feature-title {
  color: #fff;
}

.feature-text {
  color: #c7d1e6;
}

.navbar {
  background-color: #0c1b33;
  padding-top: 20px;
  padding-bottom: 20px;
}

.nav-link {
  color: #fff;
  font-size: 18px;
  margin-left: 20px;
}

.nav-link:hover {
  color: #1e88e5;
}

.pricing-row {
  background-color: #162b4d;
  padding: 60px 0;
}

.pricing-row:nth-child(even) {
  background-color: #1a3a67;
}

.social-links {
  display: flex;
  justify-content: center;
  margin-top: 20px;
}

.social-links a {
  margin: 0 10px;
  color: #fff;
  font-size: 24px;
  transition: color 0.3s;
}

.social-links a:hover {
  color: #1e88e5;
}

footer {
  background-color: #0c1b33;
  color: #fff;
}

.pancake-menu {
  display: none;
  cursor: pointer;
  float: right;
  padding: 10px;
  margin-top: 10px;
  margin-right: 20px;
}

.pancake-bar {
  width: 25px;
  height: 3px;
  background-color: #fff;
  margin: 5px 0;
  transition: 0.4s;
}

@media (max-width: 992px) {
  .pancake-menu {
    display: block;
  }

  .navbar-collapse {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background-color: #0c1b33;
    padding: 20px;
    z-index: 999;
  }

  .navbar-collapse.show {
    display: block;
  }

  .nav-link {
    margin-left: 0;
    margin-bottom: 10px;
  }
}